@model BusinessAccessLayer.AccountModel.SignUpViewModel

@{
    ViewBag.Title = "Signup";
}
<style>
    .required:after {
        content: " *";
        color: red;
    }
</style>
<div class="container">
    <div class="row" style="padding-top:10px;">
        <div class="col-md-6">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Sign In</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    if (ViewBag.ErrorMessageLogin != null)
                    {
                        <span class="text-danger">@ViewBag.ErrorMessageLogin</span>
                    }
                    <div class="form-group">
                        <div class="col-md-5 control-label">
                            @Html.LabelFor(m => m.LoginModel.LoginContactNumber, new { @class = "required" })
                        </div>
                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.LoginModel.LoginContactNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-5 control-label">
                            @Html.LabelFor(m => m.LoginModel.Password, new { @class = "required" })
                        </div>
                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.LoginModel.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-5">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.LoginModel.RememberMe)
                                @Html.LabelFor(m => m.LoginModel.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-8">
                            <input type="submit" value="Sign In" class="btn btn-primary" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-5 col-md-8">
                            @Html.ActionLink("Forgot Password?", "ForgotPassword")
                        </div>
                    </div>
                    @* Enable this once you have account confirmation enabled for password reset functionality
                        <p>
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </p>*@
                }
            </section>
        </div>
        <div class="col-md-6">
            <section id="registerform">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Create a new account</h4>
                    <hr />
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    if (Model.RegisterModel.ErrorMessage != null)
                    {
                        @Html.LabelFor(m => m.RegisterModel.ErrorMessage, new { @class = "text-danger" })
                    }
                    if (Model.RegisterModel.EmailErrorMessage != null)
                    {
                        @Html.LabelFor(m => m.RegisterModel.EmailErrorMessage, new { @class = "text-danger" })
                    }
                    <div class="form-group">
                        <div class="col-md-4 control-label">

                            @Html.LabelFor(m => m.RegisterModel.ContactNumber, new { @class = "required" })

                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.RegisterModel.ContactNumber, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            @Html.LabelFor(m => m.RegisterModel.Email, new { @class = "required" })
                        </div>

                        <div class="col-md-5">
                            @Html.TextBoxFor(m => m.RegisterModel.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            @Html.LabelFor(m => m.RegisterModel.Password, new { @class = "required" })
                        </div>

                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.RegisterModel.Password, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4 control-label">
                            @Html.LabelFor(m => m.RegisterModel.ConfirmPassword, new { @class = "required" })
                        </div>

                        <div class="col-md-5">
                            @Html.PasswordFor(m => m.RegisterModel.ConfirmPassword, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-5">
                            <input type="submit" class="btn btn-primary" value="Register" />
                        </div>
                    </div>

                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
