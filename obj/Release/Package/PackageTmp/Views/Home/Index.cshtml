@{
    ViewBag.Title = "Home Page";
}

<script>
    function returnToUsedList() {
        if ($('#txtUsedSearch').val() == "") {
            window.location = '../Used/List/';
        } else {
            window.location = '../Used/List?SearchText=' + $('#txtUsedSearch').val();
        }
    }

    function returnToRentalList() {
        if ($('#txtRentSearch').val() == "") {
            window.location = '../Rental/List/';
        } else {
            window.location = '../Rental/List?SearchText=' + $('#txtRentSearch').val();
        }
    }
</script>

