@model IEnumerable<BusinessAccessLayer.UsedModel>

@{
    ViewBag.Title = "Used Equipment List";

}

<script type="text/javascript">
    function ReturnToDetails(itemID)
    {
        //window.location = '../Details/' + itemID;
        window.location = '@Url.Action("Details", "Used")?id=' + itemID;
    }

    function DeleteUsesListItem() {
        if (confirm("Are you sure you want to delete this?")) {
            return true;
        } else {
            return false;
        }
    }

    $(document).ready(function () {

        $(".aDeleteLink").click(function (ev) {
            if (confirm("Are you sure you want to delete this?")) {
                return true;
            } else {
                ev.preventDefault();
                return false;
            }
        });
    });
</script>


<div class="container">
    <div class="row">
        <div class="col-md-10 col-xs-10">
            <h3>Used Equipment List</h3>
        </div>
        <div class="col-md-2 col-xs-2">
            <h4><a href="/Used/Create" style="color:black;"><i class="fa fa-plus-circle fa-2x" aria-hidden="true" title="Add Equipment" style="cursor:pointer;"></i></a></h4>
        </div>
    </div>
    <div class="row-fluid">
        <div class="col-md-3 hidden-xs col-lg-3 col-sm-3">
            <div class="" style="background-color:#fff;padding:15px;border-radius:5px;border:1px solid #fff;">
                   <h4 class="filterhead">Filters</h4>
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingOne">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                   Location
                                </a>
                            </h4>

                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                            <div class="panel-body">
                                <input type="search" placeholder="Enter Your Location" class="form-control"/> 
                                <ul class="cd-filter-content cd-filters list" style="display: block;">
                                    <li>
                                        <input class="filter" data-filter=".check1" type="checkbox" id="checkbox1">
                                        <label class="checkbox-label" for="checkbox1">Hyderabad</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check2" type="checkbox" id="checkbox2">
                                        <label class="checkbox-label" for="checkbox2">Vijyawada</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check3" type="checkbox" id="checkbox3">
                                        <label class="checkbox-label" for="checkbox3">Bangalore</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check3" type="checkbox" id="checkbox3">
                                        <label class="checkbox-label" for="checkbox3">Chennai</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check3" type="checkbox" id="checkbox3">
                                        <label class="checkbox-label" for="checkbox3">Delhi</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingTwo">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Categories
                                </a>
                            </h4>

                        </div>
                        <div id="collapseTwo" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingTwo">
                            <div class="panel-body">
                                <input type="search" placeholder="Enter Your Categories" class="form-control" />
                                <ul class="cd-filter-content cd-filters list" style="display: block;">
                                    <li>
                                        <input class="filter" data-filter=".check1" type="checkbox" id="checkbox1">
                                        <label class="checkbox-label" for="checkbox1">Asphalt Pavers (Chain)</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check2" type="checkbox" id="checkbox2">
                                        <label class="checkbox-label" for="checkbox2">Asphalt Pavers (Wheel)</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check3" type="checkbox" id="checkbox3">
                                        <label class="checkbox-label" for="checkbox3">Auger Drillers</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check4" type="checkbox" id="checkbox4">
                                        <label class="checkbox-label" for="checkbox4">Backhoe Loader</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check5" type="checkbox" id="checkbox5">
                                        <label class="checkbox-label" for="checkbox5">Batching plants</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading" role="tab" id="headingThree">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Year
                                </a>
                            </h4>

                        </div>
                        <div id="collapseThree" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingThree">
                            <div class="panel-body">
                                <input type="search" placeholder="Enter Your Year" class="form-control" />
                                <ul class="cd-filter-content cd-filters list" style="display: block;">
                                    <li>
                                        <input class="filter" data-filter=".check1" type="checkbox" id="checkbox1">
                                        <label class="checkbox-label" for="checkbox1">2017</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check2" type="checkbox" id="checkbox2">
                                        <label class="checkbox-label" for="checkbox2">2016</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check3" type="checkbox" id="checkbox3">
                                        <label class="checkbox-label" for="checkbox3">2015</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check4" type="checkbox" id="checkbox4">
                                        <label class="checkbox-label" for="checkbox4">2014</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check5" type="checkbox" id="checkbox5">
                                        <label class="checkbox-label" for="checkbox5">2013</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check6" type="checkbox" id="checkbox6">
                                        <label class="checkbox-label" for="checkbox6">2012</label>
                                    </li>

                                    <li>
                                        <input class="filter" data-filter=".check7" type="checkbox" id="checkbox7">
                                        <label class="checkbox-label" for="checkbox7">2011</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check8" type="checkbox" id="checkbox8">
                                        <label class="checkbox-label" for="checkbox8">2010</label>
                                    </li>
                                    <li>
                                        <input class="filter" data-filter=".check9" type="checkbox" id="checkbox9">
                                        <label class="checkbox-label" for="checkbox9">2009</label>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-9 col-xs-12 col-lg-9 col-sm-9"  style="text-align:center">
            <div class="row">

                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-lg-4 col-sm-6 col-xs-6 sfs1">
                        <div class="sfs2">
                            <div class="sfs3">
                                <a href="../Used/Details/@item.EquipmentID"><img src="@item.ImagePath" class="img-responsive sfs12" /></a>
                            </div>
                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <p class="sfs4">@Html.DisplayFor(modelItem => item.Make) (@Html.DisplayFor(modelItem => item.ModelNumber))</p>
                                </div>
                            </div>
                            <div class="row sfs5">
                                <div class="col-md-5 col-sm-6 col-xs-12 sfscolleft sfs5col">
                                    <i class="fa fa-inr"></i>&nbsp;@Html.DisplayFor(modelItem => item.Price)
                                </div>
                                <div class="col-md-7 col-sm-6 col-xs-12 sfscolright sfs5col">
                                    <i class="fa fa-phone"></i>&nbsp;@Html.DisplayFor(modelItem => item.ContactNumber)
                                </div>
                            </div>
                            <div class="row sfs6">
                                <div class="col-md-6 col-sm-6 col-xs-12 sfscolleft sfs5col">
                                    <i class="fa fa-map-marker"></i>&nbsp;@Html.DisplayFor(modelItem => item.Location)
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-12 sfscolright sfs5col">
                                    <i class="fa fa-eye" aria-hidden="true"></i>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.Views)&nbsp;&nbsp;&nbsp;<i class="fa fa-comments" aria-hidden="true"></i>
                                </div>
                            </div>
                            <div class="row sfs10">
                                <div class="col-md-12 col-xs-12 col-sm-12">
                                    @*<a href="#" class="sfs7">View</a>*@
                                    @if (Session["UserID"] != null)
                                    {
                                        if (Session["UserID"].ToString() == item.UserID.ToString())
                                        {
                                            <div class="col-md-6 col-sm-6 col-xs-6">@Html.ActionLink("View", "Details", new { id = item.EquipmentID }, new { @class = "sfs7" })</div>
                                            <div class="col-md-6 col-sm-6 col-xs-6">@Html.ActionLink("Delete", "Delete", new { id = item.EquipmentID }, new { @class = "aDeleteLink, sfs7" })</div>
                                        }
                                        else
                                        {
                                            @Html.ActionLink("View", "Details", new { id = item.EquipmentID }, new { @class = "sfs7" })
                                        }
                                    }
                                    else
                                    {
                                        @Html.ActionLink("View", "Details", new { id = item.EquipmentID }, new { @class = "sfs7" })
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>