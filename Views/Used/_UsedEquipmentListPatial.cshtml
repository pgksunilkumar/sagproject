@model IEnumerable<BusinessAccessLayer.UsedModel>

@foreach (var item in Model)
            {
    <div class="col-md-4 col-lg-4 col-sm-6 col-xs-6 sfs1">
        <div class="sfs2">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12" style="color:gray;">
                    <p class="sfs5">@Html.DisplayFor(modelItem => item.EquipmentType)</p>
                </div>
            </div>
            <div class="sfs3">
                <a href="/Used/Details/@item.EquipmentID"><img src="@item.ImagePath" class="img-responsive sfs12" /></a>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <p class="sfs4">@Html.DisplayFor(modelItem => item.Make)</p>
                </div>
            </div>
            <div class="row sfs5">
                <div class="col-md-5 col-sm-6 col-xs-12 sfscolleft sfs5col">
                    <i class="fa fa-inr"></i>&nbsp;@Html.DisplayFor(modelItem => item.Price)
                </div>
                <div class="col-md-7 col-sm-6 col-xs-12 sfscolright sfs5col">
                    <i class="fa fa-phone"></i>&nbsp;@Html.DisplayFor(modelItem => item.ContactNumber)
                </div>
            </div>
            <div class="row sfs6">
                <div class="col-md-6 col-sm-6 col-xs-12 sfscolleft sfs5col">
                    <i class="fa fa-map-marker"></i>&nbsp;@Html.DisplayFor(modelItem => item.Location)
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12 sfscolright sfs5col">
                    <i class="fa fa-eye" aria-hidden="true"></i>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.Views)&nbsp;&nbsp;&nbsp;<i class="fa fa-comments" aria-hidden="true"></i>&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.CommentCount)
                </div>
            </div>
            <div class="row sfs10">
                <div class="col-md-12 col-xs-12 col-sm-12">
                    @*<a href="#" class="sfs7">View</a>*@
                    @if (Session["UserID"] != null)
                    {
                        if (Session["UserID"].ToString() == item.UserID.ToString())
                        {
                            <div class="sfs7">
                                <div class="col-md-6 col-sm-6 col-xs-6">@Html.ActionLink("View", "Details", new { id = item.EquipmentID }, new { @class = "" })</div>
                                <div class="col-md-6 col-sm-6 col-xs-6">@Html.ActionLink("Delete", "Delete", new { id = item.EquipmentID }, new { @class = "aDeleteLink" })</div>
                            </div>
                        }
                        else
                        {
                            @Html.ActionLink("View", "Details", new { id = item.EquipmentID }, new { @class = "sfs7" })
                        }
                    }
                    else
                    {
                        @Html.ActionLink("View", "Details", new { id = item.EquipmentID }, new { @class = "sfs7" })
                    }
                </div>
            </div>
        </div>
    </div>
}
